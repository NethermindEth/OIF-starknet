# =============================================================================
# RPC ACCESS (For Testnet Forking)
# =============================================================================
ALCHEMY_API_KEY=your_alchemy_api_key_here

# =============================================================================
# HYPERLANE7683 SOLVER - ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains the minimal environment variables needed to run the solver
# Copy this to .env and fill in your actual values
# =============================================================================

# =============================================================================
# SOLVER IDENTITY & SIGNING
# =============================================================================
# Private Key for signing EVM transactions
PRIVATE_KEY=your_private_key_here

# =============================================================================
# STARKNET CONFIGURATION
# =============================================================================
# Local Development (Katana)
STARKNET_LOCAL_RPC_URL=http://localhost:5050
STARKNET_LOCAL_ACCOUNT_ADDRESS=your_starknet_account_address_here
STARKNET_LOCAL_PRIVATE_KEY=your_starknet_private_key_here

# Starknet Contract Address (from your Katana deployment)
HYPERLANE7683_STARKNET_LOCAL=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# =============================================================================
# SOLVER CONFIGURATION
# =============================================================================
# Logging
LOG_LEVEL=info
LOG_FORMAT=text

# Solver Behavior
POLL_INTERVAL_MS=1000
CONFIRMATION_BLOCKS=2
MAX_BLOCK_RANGE=3000

# Gas Settings
MAX_GAS_PRICE_WEI=50000000000
GAS_LIMIT_MULTIPLIER=1.2

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Database for tracking processed intents
DATABASE_PATH=./data/solver.db

# Health Check (optional)
HEALTH_CHECK_PORT=8080
HEALTH_CHECK_ENABLED=false

